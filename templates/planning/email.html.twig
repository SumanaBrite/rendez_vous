{% extends 'base.html.twig' %}

{% block title %}Confirmer votre Rdv{% endblock %}

{% block body %}
<br>
<div class="jumbotron ">
<h5>Remplissez vos coordonnées</h5>
<p>Vous souhaitez un rdv le {{ jourSelected }} à  {{ horaireNomSelected }}{{ creneauNomSelected }}  </p>


    <form method="post" action="{{ path('fiche_rdv' , {'horaireIdSelected': horaireIdSelected , 'jourSelected': jourSelected ,
                                   'creneauIdSelected': creneauIdSelected
                                   })  }}">


  <input  name="jourSelected" value="{{ jourSelected }}"  type="hidden">
  
  <input  name="horaireIdSelected" value="{{ horaireIdSelected }}" type="hidden">
  
  <input   name="creneauIdSelected" value="{{ creneauIdSelected }}" type="hidden">



  <label for="fname">Prénom:</label>
  {# value="" #}
