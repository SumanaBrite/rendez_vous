                                            {# <button class="btn btn-secondary" type="submit">Réserver</button> #}
                                            <input class="btn btn-secondary" type="submit" value="Réserver">

                                        {% endif %}  
                            
                                    {# {% endif %} #}
                                
                                {% else %}
